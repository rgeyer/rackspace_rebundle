#!/usr/bin/env ruby
#
# Upload everything to a vanilla Rackspace image
# prior to setup.
#
# Syntax: rackspace_upload.sh <server_address> <distro>
#
# cary@rightscale.com
#
password = ARGV[2]
scp_creds = "root"
scp_creds += ":#{password}" if password


raise "Specify distro as: centos or ubuntu" unless ARGV[1]
puts `scp -r #{ARGV[1]}/* packagediff.sh #{scp_creds}@#{ARGV[0]}:/root/`
